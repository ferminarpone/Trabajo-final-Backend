<div class="container-md">
  <h2
    class="mt-4 mb-4 pt-2 pb-2 bg-opacity-8 border rounded text-center"
  >Realiza tu consulta en nuestro chat On-line</h2>
  <div class="mt-4 mb-4 pt-2 pb-2 bg-opacity-8 border rounded text-center">
    <h5 class="text-start px-3">Ingresa tus datos para comenzar</h5>
    <div class="d-flex justify-content-around">
      <input
        type="email"
        name="email"
        id="email"
        placeholder="E-mail"
        class="form-control form-control-sm loggin"
      />
      <input
        type="text"
        name="name"
        id="name"
        placeholder="Nombre"
        class="form-control form-control-sm loggin"
      />
    </div>
  </div>
  <div class="d-flex justifity-content-center">
    <div class="mt-4 mb-4 pt-2 pb-2 bg-opacity-8 border rounded w-50 mx-auto">
      <h5 class="text-center">Mensajes</h5>
      <div class="mt-4 mb-4 pt-2 pb-2 border rounded w-75 m-auto mensajes">
        <p id="messages"></p>
      </div>
      <form class="d-flex justify-content-center mb-2">
        <input
          type="text"
          name="message"
          id="message"
          class="form-control form-control-sm w-75"
        />
        <button
          type="submit"
          class="btn btn-primary btn-sm ms-2"
          id="submitButton"
        >
          >
        </button>
      </form>
    </div>
  </div>
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/chat.js"></script>
</div>