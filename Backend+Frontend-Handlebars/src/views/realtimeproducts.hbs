<div class="container-md">
  <div>
    <h2
      class="mt-4 mb-4 pt-2 pb-2 bg-opacity-8 border rounded text-center"
    >Ingresar producto al manager de productos</h2>
    <div
      class="d-flex justify-content-between bg-opacity-8 border rounded pt-1 pb-1 mb-4"
    >
      <div class="d-flex justify-content-start">
        <h3 class="mx-2">Usuario</h3>
      </div>
      <div class="d-flex justify-content-end">
        <button id="home" class="btn btn-outline-secondary ">Home</button>
        <button id="profile" class="btn btn-outline-secondary mx-2">Perfil</button>
        <button id="users" class="btn btn-outline-secondary me-2">Gestionar usuarios</button>
      </div>
    </div>
    <form>
      <div class="row g-0 pt-3 border rounded mt-4">
        <div class="col pb-4 mx-4">
          <label class="form-label">Nombre *</label>
          <input
            type="text"
            name="title"
            id="title"
            class="form-control form-control-sm"
          />
          <label class="form-label mt-2">Descripci√≥n *</label>
          <input
            type="text"
            name="description"
            id="description"
            class="form-control form-control-sm"
          />
          <label class="form-label mt-2">Code *</label>
          <input
            type="text"
            name="code"
            id="code"
            class="form-control form-control-sm"
          />
        </div>
        <div class="col">
          <label class="form-label">Precio *</label>
          <input
            type="number"
            name="price"
            id="price"
            class="form-control form-control-sm"
          />

          <label class="form-label mt-2">Stock *</label>
          <input
            type="number"
            name="stock"
            id="stock"
            class="form-control form-control-sm"
          />
          <label class="form-label mt-2">Categoria *</label>
          <input
            type="text"
            name="category"
            id="category"
            class="form-control form-control-sm"
          />
        </div>
        <div class="col mx-4">
          <label class="form-label">Imagen</label>
          <input
            type="text"
            name="thumbnails"
            id="thumbnails"
            class="form-control form-control-sm"
          />
          <button
            type="submit"
            class="btn btn-primary btn-sm"
            id="button"
          >Agregar producto</button>
        </div>
      </div>
      <p>* Campos obligatorios</p>
    </form>
  </div>
  <h3 class="mt-4 mb-4 pt-2 pb-2 bg-opacity-8 border rounded text-center">Lista
    de productos</h3>
  <div
    id="productList"
    class="container row d-flex justify-content-start text-center"
  >
  </div>
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/realtimeproducts.js"></script>
</div>