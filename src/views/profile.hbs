<div class="container-md">
  <h1 class="mt-4 mb-4 bg-opacity-8 border rounded text-center">Perfil de
    Usuario</h1>
  <div
    class="d-flex justify-content-start bg-opacity-8 border rounded pt-1 pb-1 mb-4"
  >
    <button id="home" class="btn btn-outline-secondary mx-2">Home</button>
  </div>
  <div class="mt-4 pt-3 mb-4 bg-opacity-8 border rounded text-center">
    <h3>Bienvenido {{user.name}} ! </h3>
    <p class="bg-opacity-8 border rounded w-50 mx-auto"><strong>Nombre:
      </strong>{{user.name}}</p>
    <p class="bg-opacity-8 border rounded w-50 mx-auto"><strong>Email: </strong>
      {{user.email}}</p>
    <p class="mt-3 bg-opacity-8 border rounded w-50 mx-auto"><strong>Edad:
      </strong>{{user.age}}</p>
    <div class="bg-opacity-8 border rounded w-50 mx-auto pb-2">
      <p><strong>Documentación:</strong></p>
      {{#if user.documents}}
        <div class="comprobante mx-auto">
          <ul>
            {{#each user.documents}}
              <li>Comprobante de {{this.name}} ✅</li>
            {{/each}}
          </ul>
        </div>
      {{else}}
        <p>Aún no has completado tu documentación</p>
      {{/if}}
    </div>
    <div
      class="d-flex justify-content-center mt-3 bg-opacity-8 border rounded w-50 mx-auto py-1"
    >
      <p class="my-auto"><strong>Rol: </strong>{{user.role}}</p>
      <button
        id="changeRole"
        data-user-id="{{user.id}}"
        data-user-rol="{{user.role}}"
        class="btn btn-danger mx-3"
      >Modificar Rol</button>
    </div>
    <p class="bg-opacity-8 border rounded w-50 mx-auto mt-3">
      <strong>IdCart:</strong>
      {{user.cart}}
    </p>
    <button id="logout" class="btn btn-outline-secondary mb-3">
      Cerrar sesión</button>
  </div>

  <h3 class="mt-4 pt-2 pb-2 bg-opacity-8 border rounded text-center">Completar o
    Actualizar documentación</h3>

  <form
    id="formIdentificacion"
    class="mt-2 mb-4 p-3 bg-opacity-8 border rounded text-center"
    enctype="multipart/form-data"
    data-form="{{user.id}}"
  >
    <label class="mt-2 doc-label" for="identificacion"><strong>
        Identificación:
      </strong>
    </label>
    <input type="file" id="identificacion" name="identificacion" />
    <input class="mx-4 btn btn-primary" type="submit" />

    <div class="spinner-border text-primary spinner" role="status">
      <span class="visually-hidden">Loading...</span>
    </div>

  </form>

  <form
    id="formDomicilio"
    class="mt-2 mb-4 p-3 bg-opacity-8 border rounded text-center"
    enctype="multipart/form-data"
    data-form="{{user.id}}"
  >
    <label class="mt-2 doc-label" for="domicilio"><strong>
        Comprobante de domicilio:
      </strong>
    </label>
    <input type="file" id="domicilio" name="domicilio" />
    <input class="mx-4 btn btn-primary" type="submit" />

    <div class="spinner-border text-primary spinnerD" role="status">
      <span class="visually-hidden">Loading...</span>
    </div>
  </form>

  <form
    id="formCuenta"
    class="mt-2 mb-4 p-3 bg-opacity-8 border rounded text-center"
    enctype="multipart/form-data"
    data-form="{{user.id}}"
  >
    <label class="mt-2 doc-label" for="cuenta"><strong>
        Comprobante de estado de cuenta:
      </strong>
    </label>
    <input type="file" id="cuenta" name="cuenta" />
    <input class="mx-4 btn btn-primary" type="submit" />

    <div class="spinner-border text-primary spinnerC" role="status">
      <span class="visually-hidden">Loading...</span>
    </div>
  </form>

</div>
<script src="/js/profile.js"></script>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>